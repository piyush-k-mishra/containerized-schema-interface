{
    "stylesheet": [
        {
            "selector": "node",
            "style": {
                "content": "data(_label)",
                "shape": "data(_shape)",
                "width": "90vw",
                "text-valign": "center",
                "text-halign": "center",
                "font-size": "10vh",
                "font-weight": "bold",
                "text-wrap": "wrap",
                "text-overflow-wrap": "whitespace",
                "text-max-width": "80vw",
                "background-color": "white",
                "border-color": "#777",
                "border-width": "1vw",
                "border-style": "solid"
            }
        },
        {
            "selector": "node[^_shape]",
            "style": {
                "shape": "round-rectangle"
            }
        },
        {
            "selector": "node[^_label]",
            "style": {
                "content": ""
            }
        },
        {
            "selector": "node[id = 'root']",
            "style": {
                "background-color": "#eeeeee"
            }
        },
        {
            "selector": "node[_type = 'participant']",
            "style": {
                "background-color": "#f8d8be",
                "text-valign": "center",
                "text-halign": "center"
            }
        },
        {
            "selector": "node[_type = 'step']",
            "style": {
                "background-color": "#c7ebe6",
                "text-valign": "center",
                "text-halign": "center"
            }
        },
        {
            "selector": "node:parent",
            "style": {
                "text-valign": "top",
                "text-halign": "center"
            }
        },
        {
            "selector": "node:selected",
            "style": {
                "background-color": "gray"
            }
        },
        {
            "selector": ".overlapped",
            "style": {
                "border-color": "#a7bf37"
            }
        },
        {
            "selector": "edge",
            "style": {
                "label": "data(_label)",
                "font-size": "12vh",
                "curve-style": "bezier",
                "target-arrow-shape": "triangle",
                "line-style": "solid",
                "edge-text-rotation": "autorotate"
            }
        },
        {
            "selector": ".root-edge",
            "style": {
                "line-color": "#dadad7"
            }
        },
        {
            "selector": "edge[_edge_type = 'step_step']",
            "style": {
                "line-color": "#dadad7",
                "width": "3vw"
            }
        },
        {
            "selector": "edge[_edge_type = 'step_participant']",
            "style": {
                "line-color": "#000080",
                "width": "2vw"
            }
        },
        {
            "selector": "edge[_edge_type = 'participant_value']",
            "style": {
                "line-color": "#000080",
                "width": "1vw"
            }
        },
        {
            "selector": "edge[_edge_type = 'participant_etype']",
            "style": {
                "line-color": "#000080",
                "width": "1vw"
            }
        },
        {
            "selector": "edge:selected",
            "style": {
                "line-color": "#91a59f",
                "target-arrow-color": "#91a59f"
            }
        },
        {
            "selector": ".optional-before",
            "style": {
                "line-style": "dashed"
            }
        }
    ],
    "layout": {
        "name": "klay",
        "nodeDimensionsIncludeLabels": false,
        "fit": true,
        "padding": 20,
        "animate": false,
        "animationDuration": 500,
        "klay": {
          "addUnnecessaryBendpoints": false,
          "aspectRatio": 1.6,
          "borderSpacing": 20,
          "compactComponents": false,
          "crossingMinimization": "LAYER_SWEEP",
          "cycleBreaking": "GREEDY",
          "direction": "RIGHT",
          "edgeRouting": "SPLINES",
          "edgeSpacingFactor": 0.7,
          "feedbackEdges": false,
          "fixedAlignment": "NONE",
          "inLayerSpacingFactor": 4,
          "layoutHierarchy": true,
          "linearSegmentsDeflectionDampening": 0.3,
          "mergeEdges": false,
          "mergeHierarchyCrossingEdges": true,
          "nodeLayering": "NETWORK_SIMPLEX",
          "nodePlacement": "LINEAR_SEGMENTS",
          "randomizationSeed": 10,
          "routeSelfLoopInside": false,
          "separateConnectedComponents": true,
          "spacing": 20,
          "thoroughness": 20
        }
    }
}